@model EngagementViewModel
@{
    ViewData["Title"] = "Engagement Details";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        <h4>Engagement</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClientName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClientName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ManagerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ManagerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PartnerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PartnerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GroupName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GroupName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FieldWorkEndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FieldWorkEndDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClientYearEndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClientYearEndDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamEmailAddresses)
            </dt>
            <dd class="col-sm-10">
                @foreach (var email in Model.TeamEmailAddresses)
                {
                    @email <br/>
                }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-controller="Engagements" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-controller="Engagements" asp-action="Index">Back</a>
    </div>
</div>
